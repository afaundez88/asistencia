{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",    
            "use": "@vercel/node"          
        }
        
    ],
    "routes": [

        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },

        {
            "src": "/(.*\\.(?:ico|png|jpg|jpeg|gif|svg|css|js|map|txt|woff|woff2|ttf|eot))$",
            "dest": "/frontend/$1", 
            "headers": { 
                "cache-control": "public, max-age=31536000, immutable"
            }
        },
        

        {
            "src": "/(.*)",
            "dest": "/frontend/index.html"
        }
    ]
}